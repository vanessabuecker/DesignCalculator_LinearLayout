<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcFormResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="CalcFormButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CalcFormLine">
        <item name="android:layout_width">97dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalcFormButtonZero">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">242dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
